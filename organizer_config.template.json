{
    "comment": "Template configuration file - Copy to organizer_config.json and customize",
    "drives": {
        "MAIN_DRIVE": "UNCONFIGURED - Set this to your main drive path (e.g., /Users/yourname)",
        "EXTERNAL_DRIVE_1": "UNCONFIGURED - Optional: external drive path (e.g., /Volumes/YourDrive)",
        "EXTERNAL_DRIVE_2": "UNCONFIGURED - Optional: another drive path",
        "BACKUP_DRIVE": "UNCONFIGURED - Optional: backup drive for background backups"
    },
    "source_folders": [
        "MAIN_DRIVE/Documents",
        "MAIN_DRIVE/Pictures"
    ],
    "exclude_folders": [
        "BACKUP_DRIVE",
        "MAIN_DRIVE/organized",
        "MAIN_DRIVE/Library",
        "MAIN_DRIVE/.Trash",
        "MAIN_DRIVE/Applications",
        "MAIN_DRIVE/.cursor",
        "MAIN_DRIVE/.vscode",
        "MAIN_DRIVE/.config",
        "MAIN_DRIVE/.cache",
        "/System",
        "/Library",
        "/bin",
        "/sbin",
        "/usr",
        "/etc",
        "/var",
        "/tmp",
        "/private",
        "/dev",
        "/proc",
        "/sys",
        "C:\\Windows",
        "C:\\Program Files",
        "C:\\Program Files (x86)",
        "C:\\ProgramData",
        "C:\\System Volume Information",
        "C:\\$Recycle.Bin"
    ],
    "exclude_patterns": [
        "node_modules",
        "_build",
        "deps",
        "ebin",
        ".git",
        ".hg",
        ".svn",
        ".cvs",
        "__pycache__",
        ".pytest_cache",
        ".mypy_cache",
        ".tox",
        ".venv",
        "venv",
        "env",
        "dist",
        "build",
        "target",
        ".next",
        ".nuxt",
        ".cache",
        ".parcel-cache",
        "coverage",
        ".nyc_output",
        "elm-stuff",
        ".elixir_ls",
        ".stack-work",
        "Photos Library.photoslibrary",
        ".photoslibrary",
        "iPhoto Library",
        "Lightroom",
        ".bundle",
        "vendor",
        "bundle",
        "priv/static",
        ".gradle",
        ".m2",
        "tmp/cache"
    ],
    "exclude_extensions": [
        ".beam",
        ".pyc",
        ".pyo",
        ".class",
        ".o",
        ".obj",
        ".so",
        ".dylib",
        ".dll",
        ".exe",
        ".app",
        ".dmg",
        ".pkg"
    ],
    "min_file_size": 1024,
    "output_base": "MAIN_DRIVE/organized",
    "backup_drive_path": "BACKUP_DRIVE",
    "backup_directories": [
        "MAIN_DRIVE/Documents",
        "MAIN_DRIVE/Pictures"
    ],
    "git_user": "UNCONFIGURED - Set to your name",
    "git_email": "UNCONFIGURED - Set to your email",
    "git_exclude_folders": [
        "MAIN_DRIVE/Google Drive",
        "MAIN_DRIVE/Dropbox",
        "MAIN_DRIVE/OneDrive",
        "MAIN_DRIVE/iCloud Drive",
        "BACKUP_DRIVE"
    ],
    "comment_git_exclude": "Git doesn't work well with cloud storage - exclude cloud sync folders",
    "scan_interval": 3600,
    "max_file_size": 104857600,
    "enable_content_analysis": true,
    "enable_duplicate_detection": false,
    "enable_folder_sync": false,
    "enable_git_tracking": false,
    "enable_background_backup": false,
    "comment_git": "Git tracking is OFF by default - enable only if you understand version control",
    "flaky_volume_retries": 3,
    "retry_delay": 5,
    "use_rsync": true,
    "rsync_checksum_mode": "timestamp",
    "comment_rsync_mode": "checksum = thorough but SLOW (20+ hours first sync). timestamp = fast (minutes for unchanged files). Recommended: timestamp",
    "sync_exclude_patterns": [
        "node_modules",
        ".git",
        ".hg",
        ".svn",
        ".cvs",
        "__pycache__",
        ".DS_Store",
        "*.pyc",
        ".venv",
        "venv",
        "env",
        "dist",
        "build",
        ".next",
        ".cache",
        "*.log",
        "Photos Library.photoslibrary",
        ".photoslibrary",
        "iPhoto Library",
        "Lightroom",
        ".Spotlight-V100",
        ".TemporaryItems",
        ".fseventsd",
        ".DocumentRevisions-V100",
        ".bundle",
        "vendor",
        "bundle",
        ".elixir_ls",
        "_build",
        "deps",
        "ebin",
        "priv/static",
        "coverage",
        ".gradle",
        ".m2",
        "tmp/cache",
        "*.beam"
    ],
    "comment_vcs_sync": "Version control folders (.git, .hg, .svn, .cvs) excluded - they're huge and don't sync well to cloud storage",
    "max_drive_usage_percent": 90,
    "sync_chunk_subfolders": 30,
    "sync_timeout_minutes": 60,
    "comment_chunking": "Large folders sync in chunks. Each chunk times out after 60 min to prevent infinite hangs.",
    "sync_pairs": [
        {
            "comment": "Example: Sync from one location to another",
            "source": "MAIN_DRIVE/MyFolder",
            "target": "EXTERNAL_DRIVE_1/MyFolder"
        }, 
        {
            "comment": "You can have multiple sync pairs",
            "source": "MAIN_DRIVE/MyOtherFolder",
            "target": "EXTERNAL_DRIVE_2/MyOtherFolder"
        }
    ],
    "max_soft_links_per_file": 6,
    "comment_soft_links": "Limit how many categories a single file can be linked to. Prevents over-categorization (e.g., 12 links to same file).",
    "ml_content_analysis": {
        "enabled": true,
        "min_keyword_frequency": 10,
        "min_category_size": 5,
        "max_categories": 50,
        "min_word_length": 5,
        "stop_words_enabled": true,
        "comment": "min_word_length: 5 avoids short common words. Higher max_categories discovers more topics."
    }
}
